{
	"name": "zentinelts",
	"version": "1.0.0",
	"description": "",
	"main": "./server/server.js",
	"keywords": [],
	"author": "Surelle",
	"license": "ISC",
	"scripts": {
		"free-port": "kill-port --port 8800",
		"clean": "rimraf ./server",
		"watch": "depcheck & rimraf ./server && tsc --watch & tscp -w",
		"build": "depcheck & rimraf ./server && tsc && tscp",
		"key:generate": "node -e \"console.log(`Generated Key: ${require('crypto').randomBytes(32).toString('hex')}`);\"",
		"start:debug": "cross-env APP_ENV=debug DEBUG=express:* nodemon ./server/server",
		"start:local": "cross-env APP_ENV=local nodemon ./server/server",
		"start:dev": "cross-env APP_ENV=development nodemon ./server/server",
		"start:prod": "cross-env APP_ENV=production nodemon ./server/server",
		"installer": "npm upgrade && npm install -g depcheck kill-port cross-env nodemon copy && npm install && copy .env.example .env && npm run build",
		"db:up": "npm run db:create && npm run db:migrate",
		"db:reset": "npm run db:drop && npm run db:up && npx sequelize db:seed:all",
		"db:create": "npx sequelize db:create",
		"db:drop": "npx sequelize db:drop",
		"db:migrate": "npx sequelize db:migrate",
		"db:rollback": "npx sequelize db:migrate:undo",
		"db:rollback:all": "npx sequelize db:migrate:undo:all",
		"db:migrate:create": "npx sequelize-cli migration:generate --name",
		"docker:build": "npm run build && docker build -t zentinel-app:latest .",
		"docker:tag": "docker tag zentinel-app:latest surelle/zentinel-app:latest",
		"docker:push": "docker push surelle/zentinel-app:latest",
		"docker:deploy": "npm run docker:build && npm run docker:tag && npm run docker:push",
		"docker:start": "docker stack deploy -c docker/docker-compose.yml zentinel-stack && npm run docker:clean",
		"docker:verify": "docker stack services zentinel-stack",
		"docker:check": "docker stack ps zentinel-stack && docker stack inspect zentinel-stack",
		"docker:remove": "docker stack rm zentinel-stack",
		"docker:scale-down": "docker service scale zentinel-stack_app=1",
		"docker:clean": "docker container prune -f"
	},
